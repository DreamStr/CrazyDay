<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/list_touch_bg">

    <LinearLayout
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/picture_dating_touxiang"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="威客尊"
                    android:textColor="@color/color_rb_checked_true"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/icon_sms"
                    android:layout_width="22dp"
                    android:layout_height="22dp"/>
                <ImageView
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/icon_phone"
                    android:layout_width="22dp"
                    android:layout_height="22dp"/>
                <TextView
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0.9公里"
                    android:textColor="#ffbababa"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_start"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="45dp"
                        android:background="@color/yinpse"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_out"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="海乐花园"
                        android:textColor="@color/color_rb_checked_true"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="深圳市宝安区新湾路110东门"
                        android:textColor="#ffbababa"
                        android:textSize="13sp"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="碧海湾花园"
                        android:textColor="@color/color_rb_checked_true"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="深圳市宝安区新湾路110东门"
                        android:textColor="#ffbababa"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用车时间：2018-02-02 18:30"
        android:textColor="@color/color_rb_checked_true"
        android:textSize="15sp"/>
    <LinearLayout
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/shape_btn_bg_coupon"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="抢单"
            android:textColor="@color/color_rb_checked_true"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffe6e6e6"
        />

</LinearLayout>