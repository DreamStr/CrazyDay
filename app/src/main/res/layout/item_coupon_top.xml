<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:padding="10dp"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:padding="15dp"
            android:textColor="@color/color_rb_checked"
            android:textSize="17sp"
            android:hint="请输入兑换码"
            android:background="@drawable/shape_input_bg_coupon"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:background="@drawable/shape_btn_bg_coupon"
            android:layout_marginLeft="10dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="兑换"
            android:textColor="@color/color_rb_checked_true"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:background="@color/gray_bg"
        android:textColor="@color/color_rb_checked_true"
        android:textSize="14sp"
        android:text="以下是您已有的优惠劵，下单时选用即可"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>