<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_title_bar"
                android:clipToPadding="true"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/color_rb_checked_true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_title_bar"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="back"
                android:padding="15dp"
                android:src="@drawable/icon_back_nor"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="额外需求"
                android:textColor="@color/color_rb_checked_true"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!--<TextView-->
            <!--android:id="@+id/tv_right"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignBaseline="@+id/tv_title"-->
            <!--android:layout_alignBottom="@+id/tv_title"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginEnd="16dp"-->
            <!--android:layout_marginRight="16dp"-->
            <!--android:text="切换地图选点"-->
            <!--android:textColor="@color/color_rb_checked_true"-->
            <!--android:textSize="14sp"/>-->

        </RelativeLayout>

        <LinearLayout
            android:background="@color/gray_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/color_white"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/color_rb_checked_true"
                        android:textSize="15sp"
                        android:text="基本服务"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/icon_consult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_consult"
                        android:layout_marginLeft="5dp"
                        android:textColor="#ff4fa0fb"
                        android:textSize="13sp"
                        android:text="搬运费参考"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="20dp"
                    android:id="@+id/rc_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_rmk"
                android:orientation="vertical"
                android:background="@color/color_white"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/color_rb_checked_true"
                    android:textSize="15sp"
                    android:text="装卸、回单详细说明"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="30sp"
                        android:textColor="@color/color_rb_checked_true"
                        android:text="·"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="13sp"
                        android:textColor="@color/color_rb_checked_true"
                        android:text="装卸详细说明："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:textColor="@color/color_rb_checked_true"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginLeft="13dp"
                    android:textSize="13sp"
                    android:text="装卸服务包括装货、卸货以及搬运服务，该服务的内容和费用需要您与司机自行协商；"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="30sp"
                        android:textColor="@color/color_rb_checked_true"
                        android:text="·"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="13sp"
                        android:textColor="@color/color_rb_checked_true"
                        android:text="电子回单详细说明："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:textColor="@color/color_rb_checked_true"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginLeft="13dp"
                    android:textSize="13sp"
                    android:text="司机将会在收到回执单后进行拍照上传，您可在对应的订单详情页查看回执单照片。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="30sp"
                        android:textColor="@color/color_rb_checked_true"
                        android:text="·"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="13sp"
                        android:textColor="@color/color_rb_checked_true"
                        android:text="回单："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:textColor="@color/color_rb_checked_true"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginLeft="13dp"
                    android:textSize="13sp"
                    android:text="司机最晚在服务完成后第二天中午12点之前将回执单免费送回始发地（不包括回程带人、带货）。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/tv_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/color_white"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>